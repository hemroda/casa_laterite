<% if notice || alert %>
  <div
    data-controller="notification"
    data-notification-delay-value="2000"
    class="transition transform duration-1000 hidden fixed top-4 left-50 bg-slate-300 p-4 rounded-md w-10/12"
    data-transition-enter-from="opacity-0 translate-x-8"
    data-transition-enter-to="opacity-100 translate-x-0"
    data-transition-leave-from="opacity-100 translate-x-0"
    data-transition-leave-to="opacity-0 translate-x-8"
  >
    <div class="flex justify-between">
      <div class="text-center">
        <p class="text-green-700"><%= notice %></p>
        <p class="text-red-700"><%= alert %></p>
      </div>
      <div>
        <button data-action="notification#hide">
          <%= heroicon "x-circle", options: { class: "w-5 h-5 inline-block", disable_default_class: true } %>
        </button>
      </div>
    </div>
  </div>
<% end %>
