<div class="bg-slate-900 text-slate-300 p-8 pt-7 mt-3">
  <div class="flex justify-between items-center mb-2 text-sm font-medium">
    <div></div>
    <div class="flex">
      <%= link_to admin_user_path(@event.user) do %>
        <button type="button" class="mr-4 hover:text-orange-800">Event Owner</button>
      <% end %>
      <%= link_to admin_events_path do %>
        <button type="button" class="mr-4 hover:text-orange-800">Your Events</button>
      <% end %>
      <%= link_to edit_admin_event_path(@event) do %>
        <button type="button" class="mr-4 hover:text-orange-800">Edit</button>
      <% end %>
      <%= button_to "Delete", admin_event_path(@event), class: "text-red-800 hover:text-red-500",
                    method: :delete,
                    form: { data: { turbo_confirm: "Are you sure you want to delete this article category?" } } %>
    </div>
  </div>
  <div class="bg-slate-800 px-6 py-8 ring-1 ring-slate-900/5 shadow-xl">
    <h3 class="mt-2 text-base font-medium tracking-tight"><%= @event.title %></h3>
    <p><b>Owner:</b> <%= @event.user.full_name %></p>
    <p>
      <b>Start time:</b> <%= @event.start_time.strftime("%B %d, %Y - %H:%M") %>
      <%= "- <b>End time:</b> #{@event.end_time.strftime(" - %H:%M")}".html_safe unless @event.end_time.nil? %>
    </p>
    <p><b>Location:</b> <%= @event.location %></p>
    <p><%= @event.description %></p>
  </div>
</div>
