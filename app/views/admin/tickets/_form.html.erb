<div class="bg-slate-900 p-8 pt-7 mt-3">
  <%= simple_form_for [:admin, ticketable, object], local: true do |f| %>

    <%= render "admin/shared/form_errors", object: object %>

    <%= f.input :name,
                label_html: { class: "form-label" },
                input_html: { class: "basic-field", autofocus: true } %>
    <div class="flex gap-x-4 mt-6">
      <%= f.input :ticket_type, as: :select,
                  collection: Ticket.ticket_types.keys.collect { |s| [s.humanize, s] },
                  include_blank: false, prompt: 'Please select a ticket type',
                  wrapper_html: { class: "w-42" },
                  label_html: { class: "form-label" },
                  input_html: { class: "select-field" } %>
      <%= f.input :status, as: :select,
                  collection: Task.statuses.keys.collect { |s| [s.humanize, s] },
                  include_blank: true, prompt: "Select a status",
                  wrapper_html: { class: "w-auto" },
                  label_html: { class: "form-label" },
                  input_html: { class: "select-field" } %>
      <%= f.input :start_date, as: :string,
                  wrapper_html: { class: "w-26" },
                  label_html: { class: "form-label" },
                  input_html: { class: "basic-field", data: { controller: "flatpickr" } } %>
      <%= f.input :end_date, as: :string,
                  wrapper_html: { class: "w-26" },
                  label_html: { class: "form-label" },
                  input_html: { class: "basic-field", data: { controller: "flatpickr" } } %>
      <%= f.input :completed_at, as: :string,
                  wrapper_html: { class: "w-26" },
                  label_html: { class: "form-label" },
                  input_html: { class: "basic-field", data: { controller: "flatpickr" } } %>
    </div>
    <%= f.input :description, as: :rich_text_area,
                wrapper_html: { class: "mt-4" },
                label_html: { class: "form-label" },
                input_html: { class: "basic-field" } %>

    <%= f.button :submit, class: "submit-btn bg-orange-900" %>
  <% end %>
</div>
