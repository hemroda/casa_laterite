<div class="bg-slate-900 text-slate-300 p-8 pt-7 mt-3">
  <div class="flex justify-between items-center mb-2 text-sm font-medium">
    <div><h3 class="mt-2 text-base font-medium tracking-tight"><%= @ticket.name %></h3></div>
    <div class="flex">
      <%= link_to edit_admin_ticket_path(@ticket.id) do %>
        <button type="button" class="mr-4 ">Edit</button>
      <% end %>
      <%= button_to "Delete", admin_ticket_path(@ticket), :method => "delete", remote: true,
                    class: "text-red-800", data: { confirm: "Are you sure you want to delete this ticket?" } %>
    </div>
  </div>
  <!-- General Information -->
  <div class="bg-slate-800 px-6 py-8 ring-1 ring-slate-900/5 shadow-xl">
    <div class="flex flex-col justify-between">
      <div class="flex justify-between mb-2">
        <div class="w-1/4">
          <b><%= @ticket.ticketable_type %>:</b><br>
          <%= link_to @ticket.ticketable.try(:name) || @ticket.ticketable.try(:full_name),
                      "/admin/#{@ticket.ticketable_type.downcase.pluralize}/#{@ticket.ticketable.id}",
                      class: "hover:text-amber-800" %>
        </div>
        <div class="w-1/4"><b>Status:</b><br><%= @ticket.status.humanize %></div>
        <div class="w-1/4"><b>Ticket Type</b>:<br><%= @ticket.ticket_type.humanize %></div>
        <div class="w-1/4"></div>
      </div>
      <div class="flex justify-between mt-2 mb-2">
        <div class="w-1/4"><b>Start</b>:<br><%= @ticket.start_date&.strftime("%Y/%m/%d - %H:%M") %></div>
        <div class="w-1/4"><b>End</b>:<br><%= @ticket.end_date&.strftime("%Y/%m/%d - %H:%M") %></div>
        <div class="w-1/4"><b>Completed at</b>:<br><%= @ticket.completed_at&.strftime("%Y/%m/%d - %H:%M") %></div>
        <div class="w-1/4">
          <b>Source</b>: <br><%= link_to @ticket&.discussion&.subject, admin_discussion_path(@ticket.discussion_id),
                                         class: "hover:text-amber-800" %>
        </div>
      </div>
    </div>
  </div>
  <div class="bg-slate-800 px-6 py-8 ring-1 ring-slate-900/5 shadow-xl">
    <%= @ticket.description %>
  </div>
</div>

<div class="bg-slate-900 text-slate-300 p-8 pt-7 mt-3">
  <div class="flex justify-between items-center mb-2 text-sm font-medium">
    <h3>Comments</h3>
    <div class="flex">
    </div>
  </div>
  <div class="bg-slate-800 px-6 py-8 ring-1 ring-slate-900/5 shadow-xl">
    <ul class="mx-auto w-96">
      <%#= link_to "######", admin_ticket_path(@ticket), class: "px-6 py-2 border-b border-gray-200 w-full" %>
    </ul>
  </div>
</div>