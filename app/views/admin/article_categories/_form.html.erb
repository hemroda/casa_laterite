<div class="w-full bg-slate-900 text-slate-300 p-8 pt-7 mt-3">
  <div class="flex justify-between items-center mb-2 text-sm font-medium">
    <div></div>
    <div class="flex">
      <%= link_to admin_article_categories_path do %>
        <button type="button" class="mr-4 hover:text-orange-800">Article Categories</button>
      <% end %>
      <% unless @article_category.new_record? %>
        <%= link_to edit_admin_article_category_path(@article_category.id) do %>
          <button type="button" class="mr-4 hover:text-orange-800">Show</button>
        <% end %>
        <%= button_to "Delete", admin_article_category_path(@article_category), class: "text-red-800 hover:text-red-500",
                      method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this article category?" } } %>
      <% end %>
    </div>
  </div>
  <div class="bg-slate-800 px-6 py-8 ring-1 ring-slate-900/5 shadow-xl">
    <%= simple_form_for [:admin, @article_category], html: { class: "" }, local: true do |f| %>

    <%= render "admin/shared/form_errors", object: @article_category %>

    <div class="flex mt-3">
      <%= f.input :name, label: false, placeholder: "Article category's name",
                  wrapper_html: { class: "mr-3" },
                  input_html: { class: "basic-field" } %>
    </div>

    <%= f.button :submit, class: "text-sm md:text-base mt-4 py-1 px-2 transition duration-300 border text-white
                                hover:text-orange-800 bg-orange-900 hover:bg-white cursor-pointer" %>
  <% end %>
  </div>
</div>
