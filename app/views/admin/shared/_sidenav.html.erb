<div class="hidden fixed sidenav w-48 h-screen md:flex flex-col justify-between bg-slate-900 text-slate-300 px-6
            py-8 shadow-xl dark:text-slate-300 text-base font-medium tracking-tight">
  <!-- Logo -->
  <div>
    <%= link_to image_tag("casa_laterite_logo.svg", alt: "Casa Laterite logo", width: "70",
                          class: "flex items-center border bg-slate-500 p-2"), admin_root_path %>
  </div>
  <nav>
    <ul class="text-slate-300">
      <li class="mb-2">
        <%= link_to "Accounts", admin_accounts_path,
                    class: "#{params[:controller] == "admin/accounts" ? 'text-orange-800' : '' }" %>
      </li>
      <li class="border my-3"></li>
      <li class="mb-2">
        <% if @user %>
          <%= link_to "Users", admin_users_path,
                      class: "hover:text-orange-800 #{ 'text-orange-800' unless @user.id == current_user.id }" %>
        <% else %>
          <%= link_to "Users", admin_users_path,
                      class: "hover:text-orange-800 #{ 'text-orange-800' if (%w[users].include?(controller_name) && %w[index].include?(action_name)) }" %>
        <% end %>
      </li>
      <li class="border my-3"></li>
    </ul>
  </nav>
  <!-- Profile & System -->
  <nav>
    <ul class="text-slate-300">
      <li class="mb-2">
        <%=  %>
        <%= link_to "Profile", admin_user_path(current_user.id),
                    class: "hover:text-orange-800 #{current_page?(edit_admin_user_path(current_user.id)) || current_page?(admin_user_path(current_user.id)) ? 'text-orange-800' : '' }" %>
      </li>
      <li class="mb-2">
        <%= link_to "Website", root_path, target: "_blank", class: "hover:text-orange-800" %>
      </li>
      <li class="mb-2">
        <%= link_to "System", admin_system_path, class: "hover:text-orange-800" %>
      </li>
      <li>
        <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "text-red-500",
            form: { data: { turbo_confirm: 'Are you sure?' } } %>
      </li>
    </ul>
  </nav>
</div>
