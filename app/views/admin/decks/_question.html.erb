<div id="question">
  <div class="text-center mt-20">
    <%= question.body %>
  </div>
  <div class="mt-20" data-controller="dropdown">
    <div id="proficiency">
      <p class="text-center mt-5 text-sm"><small><%= question.proficiency_level %></small></p>
    </div>
    <!-- Actions -->
    <div class="flex gap-x-10 justify-center mt-10 mb-20">
      <span>
        <%= button_to proficiency_level_down_admin_question_path(question), remote: true, :method => :put do %>
          <%= heroicon "hand-thumb-down",
                       options: { class: "w-10 h-10 p-1 text-slate-900 bg-white hover:bg-red-800 rounded-lg",
                       disable_default_class: true } %>
        <% end %>
      </span>
      <span data-action="click->dropdown#toggle click@window->dropdown#hide" role="button" data-dropdown-target="button"
            tabindex="0">
        <%= heroicon "eye", options: { class: "w-10 h-10 p-1 text-slate-900 bg-white hover:bg-red-800 rounded-lg",
                            disable_default_class: true } %>
      </span>
      <span>
        <%= button_to proficiency_level_up_admin_question_path(question), remote: true, :method => :put do %>
          <%= heroicon "hand-thumb-up",
                       options: { class: "w-10 h-10 p-1 text-slate-900 bg-white hover:bg-red-800 rounded-lg",
                       disable_default_class: true } %>
        <% end %>
      </span>
    </div>
    <!-- Answer -->
    <div data-dropdown-target="menu" class="mt-2 hidden">
      <hr>
      <div class="dark:bg-slate-500 text-center pt-20 pb-24">
        <%= question.answers[0].body %>
      </div>
    </div>
  </div>
</div>
