<div class="bg-slate-900 text-slate-300 p-8 pt-7 mt-3">
  <div class="flex justify-between items-center mb-2 text-sm font-medium">
    <div></div>
    <div class="flex">
      <%= link_to edit_admin_project_type_path(@project_type.id) do %>
        <button type="button" class="mr-4 ">Edit</button>
      <% end %>
      <%= button_to "Delete", admin_project_type_path(@project_type), :method => "delete", remote: true,
                    class: "text-red-800", data: { confirm: "Are you sure you want to delete this project type?" } %>
    </div>
  </div>
  <div class="bg-slate-800 px-6 py-8 ring-1 ring-slate-900/5 shadow-xl">
    <h3 class="mt-2 text-base font-medium tracking-tight"><%= @project_type.name %></h3>
  </div>
</div>

<div class="bg-slate-900 text-slate-300 p-8 pt-7 mt-3">
  <div class="flex justify-between items-center mb-2 text-sm font-medium">
    <h3>Projects</h3>
    <div class="flex">
    </div>
  </div>
  <div class="bg-slate-800 px-6 py-8 ring-1 ring-slate-900/5 shadow-xl">
    <ul class="mx-auto w-96">
      <% @project_type.projects.each do |project| %>
        <%= link_to project.name, admin_project_path(project), class: "px-6 py-2 border-b border-gray-200 w-full" %>
      <% end %>
    </ul>

  </div>
</div>