<div>
  <div class="md:flex justify-between items-center mt-2 p-3 bg-slate-900">
    <div><h2 class="text-slate-300 font-bold text-2xl">Contributions</h2></div>
    <div><%= render partial: "admin/shared/search_form" %></div>
    <div></div>
  </div>
  <table class="w-full table-auto text-slate-300 bg-slate-900 mt-5 px-6 py-8 ring-1 ring-slate-900/5 shadow-xl">
    <thead>
    <tr class="text-left text-base font-medium tracking-tight">
      <th class="p-3">Name</th>
      <th>Payements</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @contributions.each do |contribution| %>
      <tr class="text-sm">
        <td class="p-3"><%= link_to contribution.name, admin_contribution_path(contribution), class: "hover:text-orange-800" %></td>
        <td><%= contribution.payments.count %></td>
        <td class="flex justify-end pt-3 pr-2">
          <%= link_to edit_admin_contribution_path(contribution), class: "mr-1" do %>
            <%= heroicon "pencil-square", options: { class: "w-4 text-blue-600 hover:text-blue-300",
                                                     disable_default_class: true } %>
          <% end %>
          <%= button_to admin_contribution_path(contribution), method: :delete, class: "text-red-700",
                        form: { data: { turbo_confirm: "Do you want to delete this contribution?" } } do %>
            <%= heroicon "trash", options: { class: "w-4 text-red-900 hover:text-red-500", disable_default_class: true } %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <!-- Pagy -->
  <div class="pagy mt-2">
    <%== pagy_nav(@pagy) %>
  </div>
</div>
