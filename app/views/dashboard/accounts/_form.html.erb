<%= simple_form_for [:dashboard, @account], html: { class: "p-2" }, local: true do |f| %>
  <div class="flex mt-3">
    <%= f.input :first_name, label: false, placeholder: "First name",
                wrapper_html: { class: "mr-3" },
                input_html: {
                  class: "w-full appearance-none border border-gray-300 py-1 px-2 bg-white text-gray-700 placeholder-gray-400
                          shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-600 focus:border-transparent rounded-lg rounded-lg" } %>
    <%= f.input :last_name, label: false, placeholder: "Last name",
                input_html: {
                  class: "w-full appearance-none border border-gray-300 py-1 px-2 bg-white text-gray-700 placeholder-gray-400
                          shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-600 focus:border-transparent rounded-lg" } %>
  </div>
  <div class="flex mt-3">
    <%= f.input :email, label: false, placeholder: "Email",
            wrapper_html: { class: "mr-3" },
                input_html: {
                  class: "w-full appearance-none border border-gray-300 py-1 px-2 bg-white text-gray-700 placeholder-gray-400
                          shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-600 focus:border-transparent rounded-lg" } %>
    <%= f.input :phone_number, label: false, placeholder: "Phone number",
                wrapper_html: { class: "mr-3" },
                input_html: {
                  class: "w-full appearance-none border border-gray-300 py-1 px-2 bg-white text-gray-700 placeholder-gray-400
                          shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-600 focus:border-transparent rounded-lg" } %>
  </div>
  <div class="flex mt-3">
    <%= f.input :password, label: false, placeholder: "Password",
                wrapper_html: { class: "mr-3" },
                input_html: {
                  class: "w-full appearance-none border border-gray-300 py-1 px-2 bg-white text-gray-700 placeholder-gray-400
                          shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-600 focus:border-transparent rounded-lg" } %>
    <%= f.input :password_confirmation, label: false, placeholder: "Password confirmation",
                input_html: {
                  class: "w-full appearance-none border border-gray-300 py-1 px-2 bg-white text-gray-700 placeholder-gray-400
                          shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-600 focus:border-transparent rounded-lg" } %>
  </div>

  <%= f.submit "Save", class: "mt-3 py-1 px-3 hover:bg-orange-800 text-grey-900 hover:text-white cursor-pointer
                              transition duration-300 border border-gray-900 rounded-lg" %>
<% end %>
