<%= simple_form_for [:dashboard, @payment], :method => :put, local: true do |f| %>
  <div class="flex justify-between align-items mb-1 p-1 h-20 ring-1 ring-slate-900/5 shadow-sm rounded-lg">
    <div>
      <%= f.label :invoice, "Télécharger la facture", class: "mt-3 mb-1" %> <br>
      <%= f.file_field :invoice, class: "mb-3" %>
    </div>
    <div>
      <p>Facture actuelle:</p>
      <% if @payment.invoice.filename.present? %>
        <%= link_to @payment.invoice.filename, rails_blob_path(@payment.invoice, disposition: "attachment") %>
      <% else %>
        <small><i>Aucun fichier n'a été téléchargé</i></small>
      <% end %>
    </div>
    <div class="flex-col items-center">
      <div>
        <%= f.submit "Enregistrer", class: "py-1 px-3 hover:bg-white text-grey-900 hover:text-grey-900
                                    cursor-pointer transition duration-300 border border-gray-900 rounded-lg" %>
      </div>
      <div class="mt-2 m-auto">
        <%= link_to "Cancel", "#", class: "py-1 px-7 hover:bg-red-800 text-red-500 hover:text-white border border-red-800 rounded-lg",
                                   "data-action": "click->modal#close" %>
      </div>
    </div>
  </div>
<% end %>